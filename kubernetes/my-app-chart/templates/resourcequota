apiVersion: v1
kind: ResourceQuota
metadata:
  name: app-quota
  namespace: app-space
spec:
  hard:
    # Compute limits
    requests.cpu: "2"           # Total CPU requests across all pods
    requests.memory: 2Gi        # Total memory requests
    limits.cpu: "4"             # Total CPU limits
    limits.memory: 4Gi          # Total memory limits

    # Object count limits
    pods: "5"                  # Max pods in namespace
    services: "2"               # Max services
    persistentvolumeclaims: "5" 